{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"lib": [
			"esnext",
			"dom"
		],
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"traceResolution": false,
        "module": "CommonJS",
		"outDir": "dist",
		"target": "es6",
		"types": [
			"node"
		]
	},
	"compileOnSave": false,
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"src"
	]
}